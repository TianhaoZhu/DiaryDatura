<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="normal_btn_style" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="android:textColor">@color/txt_blue</item>
    </style>

    <style name="big_btn_style" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_big</item>
        <item name="android:textColor">@color/txt_blue</item>
    </style>

    <style name="txt_white_big" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_big</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txt_black_big" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_big</item>
        <item name="android:textColor">@color/txt_normal</item>
    </style>

    <style name="txt_black_title" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_title</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="txt_white_title" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txt_white_small" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txt_white_normal" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txt_black_normal" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="android:textColor">@color/txt_normal</item>
    </style>

    <style name="txt_black_shadow" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="android:textColor">@color/txt_shadow</item>
    </style>
    <style name="txt_black_shadow_big" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_big</item>
        <item name="android:textColor">@color/txt_shadow</item>
    </style>



    <style name="txt_blue_normal" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="android:textColor">@color/txt_blue</item>
    </style>

    <style name="txt_blue_large" parent="AlertDialog.AppCompat">
        <item name="android:textSize">@dimen/txt_big</item>
        <item name="android:textColor">@color/txt_blue</item>
    </style>

    <style name="txt_red_normal" parent="AlertDialog.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#cdff4b56</item>
    </style>

    <style name="my_dialog_show" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog_view_full" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>


    <style name="dialog_view_new_full" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/white</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="dialog_weak_network" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">12.0dip</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="AutoCompleteStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/style_linear_pop_bg</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
    </style>


    <style name="check_style_mj" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/style_check_box_mj</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/txt_normal</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textColorHint">@color/txt_shadow</item>
    </style>

    <style name="AlertActivity_AlertStyle" parent="android:Theme.Dialog">
        <!--<item name="android:windowAnimationStyle">@style/AnimAlert</item>-->
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
